<% provide(:title, "Content of Products") %>
<section class="product">
        <div class="product_container">
            <div class="product_area">
                <div class="product_left">
                    <div class="search_role">
                        <div class="serch_howto">
                            <div class="serch_area">
                                <div class="serach_area">
                                    <h2>商品検索</h2>
                                    <div class="search_container">
                                        <%= render "search"%>
                                    </div>
                                </div>
                                <div class="category_area">
                                    <h2>商品カテゴリー</h2>
                                    <div class="category_container">
                                        <%= render "category"%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="product_right">
                    <div class="shelf">
                        <div class="exit"><%= @product_count %>点の商品がございます。</div>
                        <%= will_paginate %>
                        <div class="shelfgrid">
                            <%= render @products %>
                        </div>
                        <%= will_paginate %>
                    </div>
                </div>
            </div>
        </div>
</section>
