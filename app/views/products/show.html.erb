<% provide(:title, "") %>
<section class="deatil">
    <div class="detail_container">
        <div class="detail_area">
            <div class="left_image">
            <% @product_images.each do |image| %>
                <%= image_tag "#{image.name1}", alt: "#{@product.name}", class:"image" %>
                <% if image.name2? %>
                    <%= image_tag "#{image.name2}", alt: "#{@product.name}", class:"image" %>
                <% end %>
                <% if image.name3? %>
                    <%= image_tag "#{image.name3}", alt: "#{@product.name}", class:"image" %>
                <% end %>
                <% if image.name4? %>
                    <%= image_tag "#{image.name4}", alt: "#{@product.name}", class:"image" %>
                <% end %>
            <% end %>
            </div>
            <div class="right_explanation">
                <div class="product_detail_area">
                    <div class="product_detail">
                        <h2><%= @product.name %></h2>
                        <p class="price">¥<%= @product.price %>(税込)</p>
                        <p class="detail_sentence"><%= @product.comment %></p>
                    </div>
                    <div class="cart">
                        <%= form_for(CartItem.new, url: cart_items_path) do |f|%>
                        <% if @product.category == ("running_shoes" || "socks") %>
                            <%= f.label :size, "サイズ"%>
                            <p><%= f.select :size, [24.0, 24.5,25.0, 25.5, 26.0, 26.5, 27.0, 27.5, 28.0, 28.5, 29.0, 29.5, 30.0] %></p>
                        <% end %>
                        <%= f.label :quantity, "数量"%>
                        <p><%= f.select :quantity, @count, include_blank: "0" %></p>
                        <%= f.hidden_field :product_id, value: @product.id %>
                        <%= f.submit "カートに追加", class:"btn cart_btn" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>